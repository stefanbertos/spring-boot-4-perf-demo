<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="002-create-test-run-sequence" author="perf-tester">
        <createSequence sequenceName="test_run_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="002-create-test-run-table" author="perf-tester">
        <createTable tableName="test_run">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="test_run_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="test_id" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="message_count" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="completed_count" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="tps" type="DOUBLE PRECISION"/>
            <column name="avg_latency_ms" type="DOUBLE PRECISION"/>
            <column name="min_latency_ms" type="DOUBLE PRECISION"/>
            <column name="max_latency_ms" type="DOUBLE PRECISION"/>
            <column name="duration_ms" type="BIGINT"/>
            <column name="zip_file_path" type="VARCHAR(1000)"/>
            <column name="started_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="completed_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
