<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-test-case-sequence" author="perf-tester">
        <createSequence sequenceName="TEST_CASE_SEQ" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="001-create-test-case-table" author="perf-tester">
        <createTable tableName="TEST_CASE">
            <column name="ID" type="NUMBER(19)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR2(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="UK_TEST_CASE_NAME"/>
            </column>
            <column name="MESSAGE" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueComputed="SYSTIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="TIMESTAMP" defaultValueComputed="SYSTIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
