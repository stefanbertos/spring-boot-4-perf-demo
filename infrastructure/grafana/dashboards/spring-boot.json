      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "http_server_requests_seconds{application=\"perf-demo\", quantile=\"0.95\"}",
          "legendFormat": "p95 - {{method}} {{uri}}"
        },
        {
          "expr": "http_server_requests_seconds{application=\"perf-demo\", quantile=\"0.99\"}",
          "legendFormat": "p99 - {{method}} {{uri}}"
        }
