<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for test files -->
    <suppress checks=".*" files=".*Test\.java$"/>
    <suppress checks=".*" files=".*Tests\.java$"/>
    <suppress checks=".*" files=".*/test/.*"/>

    <!-- Suppress import order for Spring configuration classes -->
    <suppress checks="ImportOrder" files=".*Config\.java$"/>

    <!-- Allow longer Application classes -->
    <suppress checks="FileLength" files=".*Application\.java$"/>

    <!-- Suppress TooManyFields for JPA entity classes -->
    <suppress checks="TooManyFields" files=".*/persistence/entity/.*\.java$"/>

    <!-- Suppress all checks for Avro-generated code -->
    <suppress checks=".*" files=".*/com/example/avro/.*"/>
</suppressions>
